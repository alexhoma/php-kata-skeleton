{
    "name": "alexhoma/php-kata-skeleton",
    "description": "Personal PHP Skeleton for my katas",
    "require": {
        "php": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "mockery/mockery": "^0.9.9",
        "fzaninotto/faker": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "PHPKataSkeleton\\Hello\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPKataSkeleton\\HelloTest\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Alex Casajuana",
            "email": "alexcm.14@gmail.com"
        }
    ]
}
